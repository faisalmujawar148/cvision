{
	"manifest_version": 2,

	"name": "CVision",
	"description": "page-scraping extension for Chrome",
	"version": "1.0",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {
		"default_icon": "icons/icon16.png",
		"default_popup": "popup.html"
	}
}